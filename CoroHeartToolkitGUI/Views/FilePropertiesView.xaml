<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CoroHeartToolkitGUI.Views.FilePropertiesView">
  <DataGrid SelectedIndex="0" Focusable="False" Items="{Binding Properties}" CanUserResizeColumns="True" CanUserReorderColumns="True" CanUserSortColumns="False">
    <DataGrid.Columns>
      <DataGridTextColumn IsReadOnly="True" Header="Property" MinWidth="100" Width="100*" Binding="{Binding Property}"/>
      <DataGridTextColumn IsReadOnly="True" Header= "Value" MinWidth="100" Width="100*" Binding="{Binding Value}"/>
    </DataGrid.Columns>
  </DataGrid>
</UserControl>
